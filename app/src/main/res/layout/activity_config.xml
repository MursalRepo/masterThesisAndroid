<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".config">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp">

        <TextView
            android:id="@+id/phone_acc_thr"
            android:layout_width="82dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/phone_acc_seekbar"
            android:layout_marginStart="-85dp"
            android:layout_marginTop="-1dp"
            android:layout_toEndOf="@+id/textView4"
            android:text="1.2"
            android:textColor="@color/colorRed"
            android:textSize="20dp" />

        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="239dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="54dp"
            android:max="10" />

        <SeekBar
            android:id="@+id/phone_acc_seekbar"
            android:layout_width="237dp"
            android:layout_height="29dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="18dp"
            android:layout_marginTop="136dp"
            android:max="10" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="341dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="16dp"
            android:text="Smart Band Accelerometer threshold"
            android:textColor="@color/colorRed"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="339dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/seekBar"
            android:layout_alignParentTop="true"
            android:layout_marginTop="100dp"
            android:text="Phone accelerometer threshold"
            android:textColor="@color/colorRed"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/threshold"
            android:layout_width="82dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/phone_acc_thr"
            android:layout_alignTop="@+id/seekBar"
            android:layout_marginStart="2dp"
            android:layout_marginTop="-1dp"
            android:text="2.0"
            android:textColor="@color/colorRed"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="352dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="406dp"
            android:text="* These numbers define each accelerometer's fall detection threshold respectively" />

        <Switch
            android:id="@+id/phone_acc_switch"
            android:layout_width="340dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="18dp"
            android:layout_marginTop="185dp"
            android:text="use phone's accelerometer" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="195dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/phone_acc_seekbar"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="3dp"
            android:layout_marginBottom="173dp"
            android:text="emergency contact email"
            android:textColor="@color/colorRed"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/email_field"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/phone_acc_seekbar"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="4dp"
            android:layout_marginBottom="119dp"
            android:ems="10"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/save_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/email_field"
            android:layout_marginStart="69dp"
            android:layout_marginBottom="-1dp"
            android:layout_toEndOf="@+id/textView10"
            android:text="save" />

        <Switch
            android:id="@+id/dev_mode"
            android:layout_width="340dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="18dp"
            android:layout_marginTop="225dp"
            android:text="run in dev mode" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="129dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dev_mode"
            android:layout_alignStart="@+id/textView10"
            android:layout_marginStart="-4dp"
            android:layout_marginTop="-8dp"
            android:text="* to plot band's data" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>