<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mainView">

    <Button
        android:id="@+id/b_on"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="23dp"
        android:text="On"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp" />

    <Button
        android:id="@+id/b_off"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/b_on"
        android:layout_below="@+id/b_disc"
        android:text="Off"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="91dp" />

    <Button
        android:id="@+id/b_disc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="12dp"
        android:text="Discoverable"
        tools:layout_editor_absoluteX="279dp"
        tools:layout_editor_absoluteY="16dp" />

    <Button
        android:id="@+id/b_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/list"
        android:layout_alignStart="@+id/b_disc"
        android:text="List"
        tools:layout_editor_absoluteX="279dp"
        tools:layout_editor_absoluteY="91dp" />

    <ListView
        android:id="@+id/list"
        android:layout_width="212dp"
        android:layout_height="258dp"
        android:layout_alignStart="@+id/b_on"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="189dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="147dp" />

    <ListView
        android:id="@+id/list_paired"
        android:layout_width="314dp"
        android:layout_height="129dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/list"
        android:layout_marginBottom="21dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="308dp"
        android:layout_height="30dp"
        android:layout_alignStart="@+id/list"
        android:layout_below="@+id/list"
        android:layout_marginTop="-183dp"
        android:text="Paired devices" />

    <Button
        android:id="@+id/get_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/b_list"
        android:layout_alignParentTop="true"
        android:layout_marginTop="145dp"
        android:text="Info" />
</RelativeLayout>