<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mainView"
    android:background="@android:color/white">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".mainView">

        <ImageView
            android:id="@+id/image"
            android:layout_width="385dp"
            android:layout_height="112dp"
            android:layout_alignBottom="@+id/b_list"
            android:layout_marginBottom="282dp"
            android:scaleType="fitStart"
            android:src="@drawable/smart_band"
            android:background="@color/colorRed"/>

        <Button
            android:id="@+id/b_on"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="23dp"
            android:layout_marginTop="318dp"
            android:text="On"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="16dp" />

        <Button
            android:id="@+id/b_off"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/b_on"
            android:layout_below="@+id/b_disc"
            android:text="Off"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="91dp" />

        <Button
            android:id="@+id/b_disc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="298dp"
            android:layout_marginEnd="120dp"
            android:text="Discoverable" />

        <Button
            android:id="@+id/b_list"
            android:layout_width="113dp"
            android:layout_height="51dp"
            android:layout_above="@+id/list_new"
            android:layout_alignStart="@+id/b_disc"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="-21dp"
            android:text="List"
            tools:layout_editor_absoluteX="279dp"
            tools:layout_editor_absoluteY="91dp" />

        <ListView
            android:id="@+id/list_new"
            android:layout_width="299dp"
            android:layout_height="39dp"
            android:layout_alignStart="@+id/b_on"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="11dp"
            android:layout_marginBottom="79dp"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="147dp" />

        <ListView
            android:id="@+id/list_paired"
            android:layout_width="345dp"
            android:layout_height="47dp"
            android:layout_alignStart="@+id/list_new"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginBottom="11dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="308dp"
            android:layout_height="30dp"
            android:layout_below="@+id/list_new"
            android:layout_alignStart="@+id/list_new"
            android:layout_marginStart="2dp"
            android:layout_marginTop="60dp"
            android:text="Paired devices" />

        <Button
            android:id="@+id/get_info"
            android:layout_width="114dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/b_list"
            android:layout_alignParentTop="true"
            android:layout_marginTop="294dp"
            android:layout_marginEnd="-2dp"
            android:text="Info" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/b_disc"
            android:layout_alignParentTop="true"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="21dp"
            android:text="Status: "
            android:textColor="#ffffff"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/b_disc"
            android:layout_alignParentTop="true"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="-68dp"
            android:text="disconnected"
            android:textColor="#ffffff"
            android:textSize="15dp" />

        <Button
            android:id="@+id/discoverButton"
            android:layout_width="207dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView3"
            android:layout_alignBottom="@+id/image"
            android:layout_marginStart="-7dp"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="1dp"
            android:text="Discover and connect" />
    </RelativeLayout>

    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:menu="@menu/navigation_menu"
        android:layout_gravity="start"
        android:id="@+id/nv">

    </android.support.design.widget.NavigationView>



</android.support.v4.widget.DrawerLayout>
